@using ISSU.Models
@model Website

@{
    ViewBag.Title = "Добавяне на уебсайт";
}

<h2> @ViewBag.Title </h2>

@using (Html.BeginForm("CreateWebsite", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <label> Заглавие </label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Url)
        @Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
    </div>
    
    <input type="submit" class="btn btn-primary" value="Създай" /> 
}