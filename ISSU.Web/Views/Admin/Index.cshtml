
@{
    ViewBag.Title = "Admin Zone Index";
}
<hr />

<div>
    <div class="row">
        <div class="col-md-4">
            @Html.ActionLink("Create Website >>", "CreateWebsite", null, new { @class = "btn btn-primary btn-lg" })
        </div>

        <div class="col-md-4">
            @Html.ActionLink("Create Article >>", "CreateArticle", null, new { @class = "btn btn-primary btn-lg" })
        </div>

        <div class="col-md-4">
            @Html.ActionLink("Get All Users >>", "AllUsers", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    </div>
    <hr/>

    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("UpdateCourses", "Admin", FormMethod.Get))
            {
                <div class="form-group">
                    <label> Username: </label>
                    <input class="form-control" type="text" name="username" />
                </div>
                <input class="btn btn-primary" type="submit" value="Force Update Courses" />
            }
        </div>

        <div class="col-md-4">
            @using (Html.BeginForm("UpdateStudentInfo", "Admin", FormMethod.Get))
            {
                <div class="form-group">
                    <label> Username: </label>
                    <input class="form-control" type="text" name="username" />
                </div>
                <input class="btn btn-primary" type="submit" value="Force Update Student Info" />
            }
        </div>

        <div class="col-md-4">
            @using (Html.BeginForm("UpdateUser", "Admin", FormMethod.Get))
            {
                <div class="form-group">
                    <label> Username: </label>
                    <input class="form-control" type="text" name="username" />
                </div>
                <input class="btn btn-primary" type="submit" value="Update User" />
            }
        </div>
    </div>
    <hr />

    <div>
        @using (@Html.BeginForm("AddRole", "Admin", FormMethod.Get))
        {
            <div class="form-group">
                <label> Role name: </label>
                <input class="form-control" type="text" name="roleName" />
            </div>
            <input class="btn btn-primary" type="submit" value="Add Role" />
        }
    </div>
    <hr/>

    <div>
        @using (@Html.BeginForm("AddCategory", "Admin", FormMethod.Get))
        {
            <div class="form-group">
                <label> Category name: </label>
                <input class="form-control" type="text" name="categoryName" />
            </div>
            <input class="btn btn-primary" type="submit" value="Add Category" />
        }
    </div>
    <hr />
</div>