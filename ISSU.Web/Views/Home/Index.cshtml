@using ISSU.Models

@model IEnumerable<Article>

@{
    ViewBag.Title = "Начало";
}

<div class="jumbotron">
    <h4> Летен Семестър 2015 </h4>
    <img src="/Content/images/schedule.jpg" class="img-rounded img-responsive"/>
</div>

@if (Model.Count() == 0)
{
    <h2> Няма новини. </h2>
}
else
{
    <h2> Recent News ..</h2>
    <hr/>
}


@foreach (Article article in Model)
{
    @Html.Partial("_ArticleSmall", article)
}