@{
    ViewBag.Title = "Всички новини";
}

<div ng-view>


</div>

@if (ViewBag.CurrentPage >= ViewBag.PagesCount || ViewBag.CurrentPage <= 1)
{
    <div class="row">
        <div class="col-md-offset-5">
            <button class="btn btn-primary btn-sm disabled"> Няма повече страници </button>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-offset-5">
            @Html.ActionLink("< Предишна", "Index", new { id = ViewBag.CurrentPage - 1 }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Следваща >", "Index", new { id = ViewBag.CurrentPage + 1 }, new { @class = "btn btn-primary btn-sm" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/susiApp")
    <script>
        angular.module('susiApp')
            .config(susiApp.Routes.NewsRoutes.configureRoutes);
    </script>
}