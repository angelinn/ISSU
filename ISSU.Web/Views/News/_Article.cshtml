<div ng-controller="susiApp.Controllers.NewsController" class="article">
    <img ng-src="{{ currentArticle.ImageUrl }}" /> <hr />
    <h2>{{ currentArticle.Title }}</h2>

    <a ng-href="/Categories/{{ currentArticle.CategoryID }}">
        <div class="badge">
            Category Name
        </div>
    </a>

    <p><span class="glyphicon glyphicon-time"></span> Публикувано на {{ currentArticle.Created }} от Angelin</p><hr />
    <p>{{ currentArticle.Content }}</p>
</div>