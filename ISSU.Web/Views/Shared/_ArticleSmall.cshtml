@using ISSU.Models
@model Article

<h2> @Model.Title </h2>

<p class="lead">
    от @String.Format("{0} {1}", Model.Student.FirstName, Model.Student.LastName)
</p>

<a href="/Categories/@Model.CategoryID">
    <div class="badge">
        @Model.Category.Name
    </div>
</a>
<p><span class="glyphicon glyphicon-time"></span> Posted on @Model.Created</p>

<hr/>
<a href="/News/Article/@Model.ID">
    <img class="img-responsive" src="@Model.ImageUrl" width="50%" />
</a>
<hr/>

<p>@Model.ShortDescription</p>
<a class="btn btn-primary" href="/News/Article/@Model.ID"> Повече <span class="glyphicon glyphicon-chevron-right"></span></a>
<hr/>
