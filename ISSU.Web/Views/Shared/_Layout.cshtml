<!DOCTYPE html>
<html ng-app="susiApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Information System for Sofia University - ISSU</title>
    <link rel="shortcut icon" href="/Content/images/beer.ico" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#/latest" class="navbar-brand"> Информационни Системи </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#/latest"> Начало </a></li>
                    <li><a href="#/news"> Новини </a></li>
                    <li><a href="#/susi"> SUSI </a></li>
                    <li><a href="#/websites"> Линкове </a></li>
                    <li><a href="#/contact"> Контакти </a></li>
                </ul>
                @Html.Action("LoginPartial", "Account")
                @Html.Partial("_Admin")
            </div>
        </div>
    </div>

    <div class="container body-contentent" id="body">
        @RenderBody()
    </div>

    <div class="container body-contentent" ng-view>

    </div>

    <div class="container">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Angelin Nedelchev</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/susiApp")
    @RenderSection("scripts", required: false)
    <script>
        setTimeout(function () { $('center').html('') }, 1000);
    </script>
</body>
</html>
