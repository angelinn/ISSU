@model ISSU.Models.Website
@{
    ViewBag.Title = "AddWebsite";
}

<h2>AddWebsite</h2>

@using (Html.BeginForm("AddWebsite", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    
    <h4> Create Website to Database: </h4>
    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        <div>
            @Html.EditorFor(model => model.Title)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Url)
        <div>
            @Html.EditorFor(model => model.Url)
        </div>
    </div>
    
    <input type="submit" class="btn btn-default" value="Add Website" />
}